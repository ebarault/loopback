{
  "name": "AccessToken",
  "properties": {
    "id": {
      "type": "string",
      "id": true
    },
    "ttl": {
      "type": "number",
      "ttl": true,
      "default": 1209600,
      "description": "time to live in seconds (2 weeks by default)"
    },
    "created": {
      "type": "Date"
    },
    "userModelName": {
      "type": "string",
      "description": "the user model name, used to discriminate amongst different types of users"
    }
  },
  "relations": {
    "user": {
      "type": "belongsTo",
      "polymorphic": {
				"foreignKey": "userId",
				"discriminator": "userModelName"
			}
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "property": "create",
      "permission": "ALLOW"
    }
  ]
}
