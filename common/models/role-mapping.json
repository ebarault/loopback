{
  "name": "RoleMapping",
  "description": "Map principals to roles",
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "generated": true
    },
    "principalType": {
      "type": "string",
      "description": "The principal type, such as user, application, or role"
    },
    "principalId": {
      "type": "string",
      "index": true
    },
    "principalModelName": {
      "type": "string",
      "description": "The principal model name, used to discriminate amongst different types of users"
    }
  },
  "relations": {
    "principal": {
			"type": "belongsTo",
			"polymorphic": {
        "idType": "string",
				"foreignKey": "principalId",
				"discriminator": "principalModelName"
			}
		},
    "role": {
      "type": "belongsTo",
      "model": "Role",
      "foreignKey": "roleId"
    }
  }
}
